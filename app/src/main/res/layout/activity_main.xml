<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_01"
    tools:context="com.example.pc.forwardcam_01.MainActivity">


    <ImageView
        android:id="@+id/main_title"
        android:layout_width="836px"
        android:layout_height="98px"
        android:background="@drawable/title_01"
        android:layout_alignTop="@+id/main_register"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="106.5dp"
        android:layout_height="52.75dp"
        android:layout_above="@+id/main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@drawable/camera_01" />

    <EditText
        android:id="@+id/main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="ID"
        android:maxLength="10"
        android:inputType="text"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/main_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_id"
        android:layout_below="@+id/main_id"
        android:layout_marginTop="50dp"
        android:ems="12"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:maxLength="30"
        android:inputType="textPassword"
        android:hint="Password"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/main_register"
        android:layout_width="40dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/main_id"
        android:layout_below="@+id/main_id"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_test"
        android:onClick="onClickRegister_main"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/main_forgotpw"
        android:layout_width="90dp"
        android:layout_height="13dp"
        android:layout_alignEnd="@+id/main_pw"
        android:layout_below="@+id/main_pw"
        android:layout_marginTop="11dp"
        android:background="@drawable/forgotpw_test"
        android:visibility="invisible" />

    <Button
        android:id="@+id/login"
        android:onClick="onClickGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_register"
        android:layout_below="@+id/main_forgotpw"
        android:layout_marginTop="65dp"
        android:text="Go"
        android:visibility="visible"/>



</RelativeLayout>
